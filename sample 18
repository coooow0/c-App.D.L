#include<string>
#include<iostream>

using namespace std;

int main()
{
   string password;
   while (1) // 여기서 1은 참을 뜻함. while문이 참일때까지 반복 
   {
      cout << "Please enter your password: ";
      cin >> password;
      if (password == "foobar")
      {
         break;
      }
   }
   cout << "Welcome! You got the password right!";
}
